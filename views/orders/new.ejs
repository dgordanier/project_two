<%- include('../partials/header') %>

<body>
    <nav>
        <div class="nav-wrapper deep-purple lighten-1">

          <a href="#" class="brand-logo" id="headtitle">HDD MedSupply</a>

          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li class="active"><a href="/products"><span>Home</span><i class="material-icons left">home</i></a></li>
            <li class="active"><a href="/orders"><span>Orders</span><i class="material-icons left">chat</i></a></li>
          </ul>
    </nav>


    <main>
        <h2 class="center" id="headtitle">Create Order</h2>
    
        <div class="input-field">
            <div class="container">

                <div class="row">
                    <div class="card horizontal">
            
                        <form class="col s12" action="/orders" method="POST">
                            <h5>Name</h5>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="full_name" type="text" name="name">
                                    <label for="full_name" class="active">Full Name</label>
                                </div>
                            </div>    

                            <h5>Email</h5>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="email" type="email" name="email">
                                    <label for="email" class="active">example@website.com</label>
                                </div>
                            </div>

                            <h5>Address</h5>
                            <div class="row">
                                <div class="input-field col s6">
                                    <input id="street" type="text" name="street">
                                    <label for="street" class="active">Street</label>
                                </div>

                                <div class="input-field col s6">
                                    <input id="unit" type="text" name="unit">
                                    <label for="unit" class="active">Unit/Apt (optional)</label>
                                </div>

                                <div class="input-field col s6">
                                    <input id="city" type="text" name="city">
                                    <label for="city" class="active">City</label>
                                </div>

                                <div class="input-field col s2">
                                    <input id="state" type="text" name="state">
                                    <label for="state" class="active">State</label>
                                </div>

                                <div class="input-field col s4">
                                    <input id="zip" type="number" name="zip">
                                    <label for="zip" class="active">Zip Code</label>
                                </div>
                            </div>

                            <h5>Payment Information</h5>
                            <div class="row">
                                <div class="input-field col s6">
                                    <input id="cardNumber" type="number" name="cardNumber">
                                    <label for="cardNumber" class="active">Card Number</label>
                                </div>

                                <div class="input-field col s3">
                                    <input id="exp" type="number" name="exp">
                                    <label for="exp" class="active">Expiration</label>
                                </div>

                                <div class="input-field col s3">
                                    <input id="cvv" type="number" name="cvv">
                                    <label for="zip" class="active">CVV</label>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

            <h2 class="center">Cart</h2>
            <div class="row"></div>
                <% products.forEach(product => { %> 
                    <% if(product.isAddedToOrder === true) {%>

                        <div class="container">
                            <div class="row">
                                <div class="card horizontal">
                                    <div class="col s12">
                                        <div class="card-content">

                                            <div class="row">                                                
                                                <div class="col s6 m6">
                                                    <div class="card-image">
                                                        <img src="<%= product.imageURL %> ">
                                                        <input readonly type="text" name="cart.imageURL" value="<%= product.imageURL %>">
                                                        <label for="cart.name" class="active"></label>
                                                    </div>
                                                </div>
                                                
                                                <div class="input-field col s6">
                                                    <h5>Product Name</h5>
                                                    <input readonly type="text" name="cart.name" value="<%= product.name %>">
                                                    <label for="cart.name" class="active"></label>
                                                </div>
                                                
                                                <div class="input-field col s6">
                                                    <h5>Price</h5>
                                                    <input readonly type="text" name="cart.price" value="<%= product.price %>">
                                                    <label for="cart.price" class="active"></label>
                                                </div>
                                            </div>
                                                
                                            <div class="row">
                                                <div class="input-field col s12">
                                                    <h5>Description</h5>
                                                    <input readonly type="text" name="cart.description" value="<%= product.description %>">
                                                    <label for="cart.description" class="active"></label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>                
                <% }) %>   
            <div class="input-field">
            <div class="row">
                <div class="col s12">
                <button class="btn waves-effect waves-light grey" type="submit" action="/orders" method="POST">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
            </div>
        </div>

        </div>
    </div>
</main>




<%- include('../partials/footer') %>
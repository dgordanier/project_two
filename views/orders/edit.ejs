<%- include('../partials/header') %>
<body>
    <nav>
        <div class="nav-wrapper">
          <a href="#" class="brand-logo">HDD Medsupply</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li class="active"><a href="/products"><span>Home</span><i class="material-icons left">home</i></a></li>
            
            
          </ul>
    </nav>

<main>
         
    <div class="input-field">
        <div class="row">
            <form class="col s12" action="/orders/<%= order._id %>?_method=PUT" method="POST">
                
                <div class="row">
                    <h5>Name</h5>
                    <h6><%= order.name %></h6>
                    <div class="row">
                    <div class="input-field col s12">
                        <input placeholder="Enter new name" id="full_name" type="text" name="name">
                        <label for="full_name" class="active"></label>
                    </div>
                </div>    

            <h5>Email</h5>
            <h6><%= order.email %></h6>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Enter new email" id="email" type="text" name="email">
                    <label for="email" class="active"></label>
                </div>
            </div>

            <h5>Address</h5>
            <h6><%= order.street %> <%= order.unit %> <%= order.city %>, <%= order.state %>  <%= order.zip %></h6>
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Enter new address" id="street" type="text" name="street">
                    <label for="street" class="active"></label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="Unit/Apt (optional)" id="unit" type="text" name="unit">
                    <label for="unit" class="active"></label>
                </div>

                <div class="input-field col s6">
                    <input placeholder="City" id="city" type="text" name="city">
                    <label for="city" class="active"></label>
                </div>

                <div class="input-field col s2">
                    <input placeholder="State" id="state" type="text" name="state">
                    <label for="state" class="active"></label>
                </div>

                <div class="input-field col s4">
                    <input placeholder="Zip Code" id="zip" type="text" name="zip">
                    <label for="zip" class="active"></label>
                </div>
            </div>

            <h5>Payment Information</h5>
            <h6><strong>Card Number:</strong> <%= order.cardNumber %> <strong>Expiration:</strong> <%= order.exp %> <strong>CVV:</strong> <%= order.cvv %></h6>
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="Enter new card number" id="cardNumber" type="number" name="cardNumber">
                    <label for="cardNumber" class="active"></label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="Expiration" id="exp" type="text" name="exp">
                    <label for="exp" class="active"></label>
                </div>

                <div class="input-field col s3">
                    <input placeholder="CVV" id="cvv" type="number" name="cvv">
                    <label for="zip" class="active"></label>
                </div>
            </div>
                  
              </div>

            <button class="btn waves-effect waves-light" type="submit" value="Update" action="/orders/<%= order._id %>?_method=PUT" method="POST">Submit
                <i class="material-icons right">send</i>
            </button>
                  
            </form>
        </div>
    </div>

    
            <form action="/orders/<%= order._id %>?_method=DELETE" method="POST" type="submit" value="Delete">
                <button class="btn waves-effect waves-light">Delete
                    <i class="material-icons right">delete_forever</i>
                </button>
            </form>
   
           
            
       

</main>


<%- include('../partials/footer') %>
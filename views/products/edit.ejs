<main>
         
    <div class="input-field">
        <div class="row">
            <form class="col s12" action="/products" method="POST">
              <div class="row">

                    <div class="input-field col s6">
                    <input placeholder="" id="first_name" type="text" name="name">
                    <label for="first_name" class="active"><%= product.name %> </label>
                    </div>

                    <div class="input-field col s6">
                    <input id="last_name" type="text" name="name">
                    <label for="last_name" class="active"><%= product.price %> </label>
                    </div>
               
                    <div class="input-field col s12">
                      <textarea id="textarea1" class="materialize-textarea"></textarea>
                      <label for="textarea1" class="active"> <%= product.description %> </label>
                    </div>
                  
              </div>

              <button class="btn waves-effect waves-light" type="submit" action="/products/edit/ <%= product._id %>?_method=PUT" method="POST">Submit
                <i class="material-icons right">send</i>
            </button>

</main>








<%- include('../partials/header') %>
<body>
    <nav>
        <div class="nav-wrapper deep-purple lighten-1">
            <a href="/products" class="brand-logo" id="headtitle">HDD MedSupply</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li class="active"><a href="/products"><span>Home</span><i class="material-icons left">home</i></a></li>
            <li class="active"><a href="/products/new"><span>New Product</span><i class="material-icons left">add_box</i></a></li>
            <li class="active"><a href="/orders"><span>Orders</span><i class="material-icons left">chat</i></a></li>
            <li class="active"><a href="/orders/new"><span>New Order</span><i class="material-icons left">add_box</i></a></li>
            
            
          </ul>
    </nav>

<main>
    <h3>Edit Product</h3>
         
    <div class="input-field">
        <div class="row">
            <form class="col s12" action="/products/<%= product._id %>?_method=PUT" method="POST">

                <div class="row">
                    <div class="input-field col s6">
                        <h5>Product Name</h5>
                        <input id="first_name" type="text" name="name" value="<%= product.name %> ">
                        <label for="first_name" class="active"></label>
                    </div>
                    
                    <div class="input-field col s6">
                        <h5>Price</h5>
                        <input id="last_name" type="text" name="price" value="<%= product.price %> ">
                        <label for="last_name" class="active"> </label>
                    </div>
                </div>
                    
                <div class="row">
                    <div class="input-field col s6">
                        <h5>Description</h5>
                        <input id="textarea1" type="text" name="description" value="<%= product.description %> ">
                        <label for="textarea1" class="active">  </label>
                    </div>
                </div>

                <button class="btn waves-effect waves-light grey" type="submit" value="Update" action="/products/<%= product._id %>?_method=PUT" method="POST">Submit
                    <i class="material-icons right">send</i>
                </button>
                  
            </form>
        </div>
    </div>
    
    <div class="input-field">
        <div class="row">
            <form class="col s12" action="/products/<%= product._id %>?_method=DELETE" method="POST" type="submit" value="Delete">
                <button class="btn waves-effect waves-light grey">Delete
                    <i class="material-icons right">delete_forever</i>
                </button>
            </form>
        </div>
    </div>

 
       

</main>
